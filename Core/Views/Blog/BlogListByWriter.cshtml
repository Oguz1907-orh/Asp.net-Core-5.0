@using EntityLayer.Concrete
@model List<Blog>


@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategoriler</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>



    </tr>
    @foreach(var item in Model)
    {
<tr>
    <td>@item.BlogId</td>
    <td>@item.BlogTitle</td>
    <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyyy"))</td>
    <td>@item.Category.CategoryName</td>
    <td>@Html.Raw(item.BlogStatus ? "<label class='badge badge-success'>Aktif</label>" : "<label class='badge badge-danger'>Pasif</label>")</td>

    <td><a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-primary" onclick="return confirm('Silmek istediğinizden eminmisiniz?');">Sil</a></td>

    <td><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></td>
</tr>
  
    }
</table>
<a href="/Blog/BlogAdd" class="btn btn-outline-primary">Yeni Blog Oluştur</a>